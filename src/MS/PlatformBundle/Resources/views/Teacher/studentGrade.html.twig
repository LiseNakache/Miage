{% extends "@MSPlatform/layout.html.twig" %}

{% block title %}{{ parent() }} - Index{% endblock %}

{% block body_forum %}


    <div class="container">
    <div class="row">

        <div class="result"></div>


        {% for subject in teacher.subjects %}
        {% for course in subject.courses %}
        <table class="table table-stripped table-hover">
            <thead>
            <tr>
                <th>Nom de l'Etudiant</th>
                <th>Note</th>
            </tr>
            </thead>

            {% for student in course.students %}
                <form >
                    <tbody>
                    <tr>
                        <td id="{{student.id}}">{{ student.name }}</td>
                        <td id="{{student.id}}" class="student">{{ student.id }}</td>
                        <td><input type="number" id="{{student.id}}" class="grade" value="" min="0" max="20"/></td>
                    </tr>

            {% endfor %}
                    <td><input type="submit" value="Ajouter" /></td>
                    </tbody>
        {% endfor %}
        {% endfor %}
        </form>
        </table>

    </div>

</div>

    {% javascripts filter='?yui_js'
        'bundles/fosjsrouting/js/router.js'
        'js/fos_js_routes.js'
        'assets/jquery/jquery.js'
        'bundles/msplatform/js/teacherGrade.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}