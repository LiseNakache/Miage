{% extends "@MSPlatform/layout.html.twig" %}

{% block title %}{{ parent() }} - Index{% endblock %}

{% block body %}
<div class="container">

    {% for course in student.courses %}

    <h3>{{ course.type }}-{{ course.name }} -- Coefficient Total :
        <span class="final_coef">{{ course.totalCoef }}</span>
    </h3>


    <div class="row">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Mati√®re</th>
            <th>Coefficient</th>
            <th>NOTE</th>
        </tr>
        </thead>


    {% for subject in course.subjects %}

    <form action="" method="post">
                <tbody>
                <tr>
                    <td><label for="subjectName">{{ subject.name }}</label></td>
                    <td id="{{ subject.id}}" class="coef">{{ subject.coef}}</td>
                    <td><input type="number" id="{{subject.id}}" class="grade" value="" min="0" max="20"/></td>
                </tr>
                </tbody>

        {% endfor %}
        {% endfor %}

    </form>
    </table>
        <input type="button" name="submit" value="Results" id="button" />
</div>
    <h3 class="result"></h3>
</div>

    {% javascripts
        'assets/jquery/jquery.js'
        'bundles/msplatform/js/formGrade.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}

{% endblock %}
