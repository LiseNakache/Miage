{% extends "base.html.twig" %}
{% block title %}{{ parent() }} General Homepage {% endblock %}


{% block body %}
    <!-- Static navbar -->
    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Miage Simulateur</a>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">

                        {% if is_granted("ROLE_ADMIN") and is_granted("ROLE_TEACHER")  %}
                            <p class="navbar-text">
                                <a href="{{ path('ms_admin_homepage') }}">Acceuil</a>
                            </p>
                            {#<p class="navbar-text">#}
                                {#<a href="{{ path('ms_teacher_homepage') }}">Acceuil Professeur</a>#}
                            {#</p>#}
                        {% elseif is_granted("ROLE_TEACHER") %}
                            <p class="navbar-text">
                                <a href="{{ path('ms_teacher_homepage') }}">Acceuil</a>
                            </p>
                        {% elseif is_granted("ROLE_STUDENT") %}
                            <p class="navbar-text">
                                <a href="{{ path('ms_student_homepage') }}">Acceuil</a>
                            </p>
                        {% endif %}
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                        <p class="navbar-text">
                            {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }}
                        </p>
                        {#{% if is_granted("ROLE_ADMIN") %}#}
                            {#<li>#}
                                {#<a href="{{ path('fos_user_registration_register') }}">{{ 'layout.register'|trans({}, 'FOSUserBundle') }}</a>#}
                            {#</li>#}
                        {#{% endif %}#}
                        <li>
                            <a href="{{ path('fos_user_security_logout') }}">
                                {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                            </a>
                        </li>
                    {% else %}
                        <li>
                            <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                        </li>
                    {% endif %}
                </ul>
            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <div class="jumbotron">
        <div class="container-fluid">
            <h1 class="display-4">Universit√© Evry</h1>
            <p class="lead">Bienvenue sur le projet de Simulation de Lise Nakache</p>
